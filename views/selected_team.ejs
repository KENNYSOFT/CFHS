<% title = "CFHS :: 팀원목록" %>
<% menu = "team_list" %>
<% include header.ejs %>

<form class="well" data-ajax="false" method="post" action="/team/delete">
<table class = "table">
    <thead>
        <tr>
            <th>팀원 목록</th>
        </tr>
    </thead>
    <tbody>
        <% rows.forEach(function(el) { %> 
        <tr>
            <td><%= el.Uid %></td>
            <td><div class="btn-group">
                    <button class="btn btn-primary" name="teammemeber" type = "submit" value = <%= el.Uid %>> >팀원 삭제</button>
            </div></td>
        </tr>
        <% }) %>
    </tbody>
</table>
</form>

<br><br>
<form class="well" data-ajax="false" method="post" action="/team/suggest">
    <table class = "table" >
        <tr>
            <td>
                <input class="form-control mr-sm-2 nav-link active" type="text" placeholder="유저 아이디" style="width: 70px" name="id" required>
            </td>
            <td>
                <div class="btn-group">
                    <button class="btn btn-primary" type = "submit">팀원 신청</button>
                </div>
            </td>
        </tr>
    </table>
</form>

<br><br><br>


<form class="well" data-ajax="false" method="post" action="/team/request">
    <div class="btn-group">
            <button class="btn btn-primary" name = "team_request" type = "submit" value = session.id></button>
        </div>
</form>

<% include footer.ejs %>
